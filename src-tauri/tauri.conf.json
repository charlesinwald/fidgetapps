{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fidgetapps",
  "version": "0.1.0",
  "identifier": "com.fidgetapps.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "fidgetapps",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "run-app",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "fs": {
      "scope": ["$APPCONFIG/*"]
    },
    "os": {
      "scope": ["appConfigDir"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
